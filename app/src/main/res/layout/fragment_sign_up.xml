<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".presentation.signup.SignUpFragment">

    <TextView
        android:id="@+id/profile_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/arial"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:text="@string/profile"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_btn" />
    <LinearLayout
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        android:background="@drawable/search_linear_background"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/country_linear"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_text"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/country"
            android:fontFamily="@font/arial"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="end"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/country_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/country"
                android:fontFamily="@font/arial"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/language_linear"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/country_linear"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/language"
            android:fontFamily="@font/arial"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="end"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/language_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/language"
                android:fontFamily="@font/arial"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/right"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/email_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/language_linear"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:fontFamily="@font/arial"
                android:layout_margin="4dp"/>
            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/email_edittext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/black"
                android:padding="4dp"
                android:textSize="18sp"
                android:hint="@string/example_gmail_com"
                android:fontFamily="@font/arial"
                android:layout_margin="4dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_circle"
            android:padding="4dp"
            android:visibility="gone"
            android:layout_gravity="end|center"
            android:layout_margin="8dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/password_cardView"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_cardView"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:fontFamily="@font/arial"
                android:layout_margin="4dp"/>
            <EditText
                android:inputType="textPassword"
                android:fontFamily="@font/arial"
                android:id="@+id/password_edittext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/black"
                android:padding="4dp"
                android:hint="@string/password"
                android:textSize="18sp"
                android:layout_margin="4dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/password_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_circle"
            android:padding="4dp"
            android:visibility="gone"
            android:layout_gravity="end|center"
            android:layout_margin="8dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/first_name_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_cardView"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:fontFamily="@font/arial"
                android:layout_margin="4dp"/>
            <EditText
                android:inputType="text"
                android:fontFamily="@font/arial"
                android:id="@+id/first_name_edittext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/black"
                android:padding="4dp"
                android:hint="@string/first_name"
                android:textSize="18sp"
                android:layout_margin="4dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/first_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_circle"
            android:padding="4dp"
            android:visibility="gone"
            android:layout_gravity="end|center"
            android:layout_margin="8dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/last_name_cardView"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_name_cardView"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:fontFamily="@font/arial"
                android:layout_margin="4dp"/>
            <EditText
                android:inputType="text"
                android:fontFamily="@font/arial"
                android:id="@+id/last_name_edittext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/black"
                android:padding="4dp"
                android:hint="@string/last_name"
                android:textSize="18sp"
                android:layout_margin="4dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/last_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_circle"
            android:padding="4dp"
            android:visibility="gone"
            android:layout_gravity="end|center"
            android:layout_margin="8dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/tel_cardView"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/last_name_cardView"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:fontFamily="@font/arial"
                android:layout_margin="4dp"/>
            <EditText
                android:inputType="text"
                android:fontFamily="@font/arial"
                android:id="@+id/tel_edittext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/black"
                android:padding="4dp"
                android:hint="@string/tel_example"
                android:textSize="18sp"
                android:layout_margin="4dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/tel_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_circle"
            android:padding="4dp"
            android:visibility="gone"
            android:layout_gravity="end|center"
            android:layout_margin="8dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/already_account_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/already_account"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:fontFamily="@font/arial"
        android:textColor="@color/open_blue"
        app:layout_constraintTop_toBottomOf="@id/tel_cardView"/>
    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:fontFamily="@font/arial"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/already_account_text"
        android:backgroundTint="@color/open_blue"
        android:text="@string/sign_up"
        app:cornerRadius="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>