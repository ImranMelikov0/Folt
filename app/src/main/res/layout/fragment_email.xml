<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".presentation.email.EmailFragment">

    <LinearLayout
        android:id="@+id/back_btn"
        android:padding="5dp"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_linear_background"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            />
    </LinearLayout>

    <TextView
        android:layout_below="@id/back_btn"
        android:id="@+id/add_new_address_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="30sp"
        android:fontFamily="@font/arial"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/email_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_new_address_textview"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:textColor="@color/open_blue"
                android:layout_margin="4dp"/>
            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/email_edittext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/black"
                android:padding="4dp"
                android:textSize="20sp"
                android:fontFamily="@font/arial"
                android:layout_margin="4dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_circle"
            android:padding="4dp"
            android:visibility="gone"
            android:layout_gravity="end|center"
            android:layout_margin="8dp"/>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/arial"
        android:textStyle="bold"
        android:backgroundTint="@color/open_blue"
        android:text="@string/save"
        app:cornerRadius="4dp" />
</RelativeLayout>